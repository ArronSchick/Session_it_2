<p id="notice"><%= notice %></p>

<h1>Lessons</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Date</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lessons.each do |lesson| %>
      <tr>
        <td><%= image_tag lesson.picture, :class => "lesson_image" if lesson.picture.attached? %></td>
        <td><%= lesson.description %></td>
        <td><%= lesson.date %></td>
        <td><%= lesson.start_time %></td>
        <td><%= lesson.end_time %></td>
        <td>$<%= lesson.price %></td>
        <td><%= link_to 'Edit', edit_lesson_path(lesson), :class => "actions btn btn-primary" %></td>
        <td><%= link_to 'Delete', lesson, method: :delete, data: { confirm: 'Are you sure?' }, :class => "actions btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create another Lesson', new_lesson_path, :class => "actions btn btn-primary"  %>
