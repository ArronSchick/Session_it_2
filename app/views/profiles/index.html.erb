<p id="notice"><%= notice %></p>

<h1>Profile</h1>
<table>
  <thead>
    <tr>
      
      <% if user_signed_in? && @user.profile %>
        <th>Welcome</th>
        <% else%>
        <th>Create a new profile</th>
      <% end %>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="card m-b4">
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= image_tag profile.picture, :class => "profile_image" if profile.picture.attached? %></td>
        <td><%= profile.name %></td>
        <td><%= profile.bio %></td>
        
        <td><%= link_to 'Edit', edit_profile_path(profile), :class => "btn btn-primary" %></td>
        <td><%= link_to 'Delete', profile, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
    
  </tbody>
</table>

<br>
<% if current_user.profile %>
 
<% else %>
  <%= link_to 'New Profile', new_profile_path, :class => "btn btn-primary btn-lg" %>
<% end %>

<% if @classroom_exists %>
  <%= link_to 'Go to Classroom', classrooms_path, :class => "btn btn-primary" %>
<% else %>
  <%= link_to 'Create a classroom', new_classroom_path, :class => "btn btn-primary btn-lg"%>
<% end %>
