<p id="notice"><%= notice %></p>

<h1>Classroom</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @classrooms.each do |classroom| %>
      <tr>
        <td><%= image_tag classroom.banner_image, :class => "banner_image" if classroom.banner_image.attached? %></td>
        <td><%= image_tag classroom.picture, :class => "classroom_image" if classroom.picture.attached? %></td>
        <td><%= classroom.description %></td>
        <td><%= link_to 'Edit', edit_classroom_path(classroom), :class => "btn btn-primary" %></td>
        <td><%= link_to 'Delete', classroom, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div>

</div>

<br>

<% if @profile_exists %>
  <%= link_to 'Go to Profile', profiles_path, :class => "btn btn-primary" %>
  <%= link_to 'Create a Lesson', new_lesson_path, :class => "btn btn-secondary" %>
<% else %>
  <%= link_to 'New Classroom', new_classroom_path, :class => "btn btn-primary" %>
<% end %>
