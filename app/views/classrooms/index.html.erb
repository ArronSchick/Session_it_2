<div class="container">
  <p id="notice"><%= notice %></p>


  <h1>Classroom</h1>

  <table>
    <thead>
      <tr>
        <th></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
        <tr>
          <td><%= image_tag @classroom_view.banner_image, :class => "banner_image" if @classroom_view.banner_image.attached? %></td>
          <td><%= image_tag @classroom_view.picture, :class => "classroom_image" if @classroom_view.picture.attached? %></td>
          <td><%= @classroom_view.description %></td>
          <td><%= link_to 'Edit', edit_classroom_path(@classroom_view), :class => "btn btn-primary" %></td>
        </tr>
    </tbody>
  </table>
  <table>
  <h1>All Lessons</h1>
    <tbody>
        <% @lessons.each do |lesson| %>
        <% if lesson.classroom_id == @classroom_id.id %>
        <tr>
          <td><%= image_tag lesson.picture, :class => "lesson_image" if lesson.picture.attached? %></td>
          <td><%= lesson.description %></td>
          <td><%= lesson.date %></td>
          <td><%= lesson.start_time %></td>
          <td><%= lesson.end_time %></td>
          <td>$<%= lesson.price %></td>
          <td><%= link_to 'Edit', edit_lesson_path(lesson), :class => "actions btn btn-primary" %></td>
          <td><%= link_to 'Delete', lesson, method: :delete, data: { confirm: 'Are you sure?' }, :class => "actions btn btn-danger" %></td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <div>

  </div>

  <br>

  <% if @profile_exists %>
    <%= link_to 'Go to Profile', profiles_path, :class => "btn btn-primary" %>
    <%= link_to 'Create a Lesson', new_lesson_path, :class => "btn btn-secondary" %>
  <% else %>
    <%= link_to 'New Classroom', new_classroom_path, :class => "btn btn-primary" %>
  <% end %>
</div>