<p id="notice"><%= notice %></p>

<h1>Your booked lessons</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookeds.each do |booked| %>
    <% if current_user.profile.id == booked.profile_id %>
      <tr>
        <td><%= link_to 'Cancel Booking', booked, :class => "actions btn btn-primary", method: :delete, data: { confirm: 'Are you sure?' }  %></td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Make another booking', lessons_path, :class => "actions btn btn-primary" %>
<%= link_to 'Go to Profile', profiles_path, :class => "actions btn btn-primary" %>

